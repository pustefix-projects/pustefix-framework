<?xml version="1.0" encoding="UTF-8"?>
<pfx:document xmlns:pfx="http://www.schlund.de/pustefix/core"
              xmlns:ixsl="http://www.w3.org/1999/XSL/Transform">
  <head>
    <title>Pustefix Content Management System</title>
  </head>
  <pfx:frameset rows="40,*">
    <pfx:frame name="top_navi" scrolling="no">
      <html>
        <head>
          <style type="text/css">
            <pfx:include href="core/txt/styles.xml" part="standard"/>
            <pfx:include href="core/editor2/txt/styles.xml" part="standard"/>
          </style>
        </head>
        <body class="navi">
          <pfx:include href="core/editor2/txt/navigation.xml" part="top"/>
        </body>
      </html>
    </pfx:frame>
    <pfx:frame name="bottom">
      <pfx:frameset cols="300,*" border="2" frameborder="2" framespacing="1">
        <pfx:frame name="left_navi" noresize="false">
          <html>
            <head>
              <style type="text/css">
                <pfx:include href="core/txt/styles.xml" part="standard"/>
                <pfx:include href="core/editor2/txt/styles.xml" part="standard"/>
              </style>
              <script type="text/javascript" src="/core/script/baselib.js"></script>
              <script type="text/javascript" src="/core/script/editor.js"></script>
            </head>
            <body class="editor_body_sidebar">
              <pfx:maincontent path="core/editor2/txt/pages" prefix="main_" part="sidebar"/>
            </body>
          </html>
        </pfx:frame>
        <pfx:frame name="main">
          <html>
            <head>
              <style type="text/css">
                <pfx:include href="core/txt/styles.xml" part="standard"/>
                <pfx:include href="core/editor2/txt/styles.xml" part="standard"/>
              </style>
              <script type="text/javascript" src="/core/script/wfx.js"></script>
              <script type="text/javascript" src="/core/script/wfxToolbar.js"></script>
              <script type="text/javascript" src="/core/script/wfxEditor.js"></script>
              <script type="text/javascript" src="/core/script/wfxhere.js"></script>
            </head>
            <body onLoad="wfxinit()">
             <div style="padding-left: 10px; padding-right: 10px;">
               <pfx:maincontent path="core/editor2/txt/pages" prefix="main_" part="content"/>
             </div>
            </body>
          </html>
        </pfx:frame>
      </pfx:frameset>
    </pfx:frame>
  </pfx:frameset>
</pfx:document>

