<?xml version="1.0" encoding="ISO-8859-1" ?>
<!-- This page is included by the servletconf/projects.xml.in   -->
<!-- "<insertexternalprojects/>" tag.  -->
<!-- The basic project settings are made in this file. Never edit the -->
<!-- project.xml because it is generated by the project.xml.in.  -->
<!-- For more informations take a look here: -->

<!-- http://pustefix.sourceforge.net/project.html -->

<project name="simplepage" xmlns:cus="http://www.schlund.de/pustefix/customize">
  <!-- The simplepage application -->
  
  <active>true</active>
  <comment>Demo 1</comment>
  <depend>simplepage/conf/depend.xml</depend>
  <virtualhost><cus:fqdn/></virtualhost>
  <servername>simplepage.<cus:fqdn/></servername>
  <serveralias>simplepage.<cus:machine/></serveralias>
  
  <!-- The default path you will be sent to when using the url -->
  <!-- "http://simplepage.<servername>/" -->
  <defpath>/xml/config</defpath>
  <!-- <passthrough>simplepage/img</passthrough> -->
  
  <!-- The Apache DocumentRoot for static content -->
  <documentroot><cus:docroot/>simplepage/htdocs</documentroot>
  
  <!-- Here you can enter any additional apache config stuff -->
  <literalapache>
    # Add something here...
  </literalapache>
  <ports>
    <port number="80"/>
  </ports>
  
  <!-- Use useineditor="true" for every servlet that handles pages belonging directly to the project -->
  <!-- (That means for example not the servlet that starts up the editor, as the pages delivered -->
  <!-- by this servlet belong to the editor project) -->
  <servlet name="config" useineditor="true">
    <active>true</active>
    <class>de.schlund.pfixxml.ContextXMLServlet</class>
    <propfile>simplepage/conf/config.conf.xml</propfile>
  </servlet>
  <servlet name="deref">
    <active>true</active>
    <class>de.schlund.pfixxml.DerefServlet</class>
  </servlet>
</project>

