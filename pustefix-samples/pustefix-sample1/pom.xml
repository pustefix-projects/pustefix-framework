  <groupId>org.pustefixframework</groupId>
  <artifactId>pustefix-sample1</artifactId>
  <version>0.22.23-SNAPSHOT</version>
  <packaging>war</packaging>

  <name>Pustefix Sample 1</name>

  <properties>
    <pustefix.mode>test</pustefix.mode>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.pustefixframework</groupId>
      <artifactId>pustefix-core</artifactId>
      <version>0.22.23-SNAPSHOT</version>
    </dependency>

    <!-- Use Log4j (old) -->
    <!--
